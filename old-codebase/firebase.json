{
  "hosting": {
    "target": "bwstats",
    "cleanUrls": true,
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "bwstats"
      }
    ],
    "redirects": [
      {
        "source": "/lb",
        "destination": "/leaderboards",
        "type": 308
      },
      {
        "source": "/leaderboard",
        "destination": "/leaderboards",
        "type": 301
      }
    ]
  },
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint", "npm --prefix \"$RESOURCE_DIR\" run build"],
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true
    }
  }
}
